<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArenaActivity">

    <TextView
        android:id="@+id/lutemon1InfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/geostar_fill"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/lutemon1Img"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/lutemon1Img"
        app:layout_constraintTop_toBottomOf="@+id/lutemon1Img" />

    <Button
        android:id="@+id/arenaContinueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/geostar_fill"
        android:text="Continue"
        app:layout_constraintBottom_toTopOf="@+id/arenaFleeBtn"
        app:layout_constraintEnd_toEndOf="@+id/arenaFleeBtn"
        app:layout_constraintStart_toStartOf="@+id/arenaFleeBtn" />

    <Button
        android:id="@+id/arenaFleeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/geostar_fill"
        android:onClick="fleeArena"
        android:text="Try to flee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lutemon2InfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/geostar_fill"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/lutemon2Img"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/lutemon2Img"
        app:layout_constraintTop_toBottomOf="@+id/lutemon2Img" />

    <ImageView
        android:id="@+id/lutemon1Img"
        android:layout_width="134dp"
        android:layout_height="133dp"
        android:layout_marginTop="288dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_black_pixelated_monster_sprite_for_a_videogame_without_a_background_1_" />

    <ImageView
        android:id="@+id/lutemon2Img"
        android:layout_width="116dp"
        android:layout_height="111dp"
        android:layout_marginTop="92dp"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_black_pixelated_monster_sprite_for_a_videogame_without_a_background_1_" />

    <TextView
        android:id="@+id/lutemon1HpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/lutemon1Img"
        app:layout_constraintEnd_toEndOf="@+id/lutemon1Img"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@+id/lutemon1Img" />

    <TextView
        android:id="@+id/lutemon2HpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/lutemon2Img"
        app:layout_constraintEnd_toEndOf="@+id/lutemon2Img"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="@+id/lutemon2Img" />

    <TextView
        android:id="@+id/lutemon1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="7dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/lutemon1InfoTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lutemon1Img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lutemon2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/lutemon2InfoTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lutemon2Img"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/battleInfoTxt"
        android:layout_width="218dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76" />
</androidx.constraintlayout.widget.ConstraintLayout>