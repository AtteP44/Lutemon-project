<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArenaActivity">

    <TextView
        android:id="@+id/ownLutemonTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:fontFamily="@font/geostar_fill"
        app:layout_constraintEnd_toEndOf="@+id/ownLutemonImg"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/ownLutemonImg"
        app:layout_constraintTop_toBottomOf="@+id/ownLutemonImg" />

    <Button
        android:id="@+id/arenaContinueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/geostar_fill"
        android:text="Continue"
        app:layout_constraintBottom_toTopOf="@+id/arenaFleeBtn"
        app:layout_constraintEnd_toEndOf="@+id/arenaFleeBtn"
        app:layout_constraintStart_toStartOf="@+id/arenaFleeBtn" />

    <Button
        android:id="@+id/arenaFleeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/geostar_fill"
        android:onClick="fleeArena"
        android:text="Try to flee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/opponentInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:fontFamily="@font/geostar_fill"
        app:layout_constraintEnd_toEndOf="@+id/opponentLutemonImg"
        app:layout_constraintStart_toStartOf="@+id/opponentLutemonImg"
        app:layout_constraintTop_toBottomOf="@+id/opponentLutemonImg" />

    <ImageView
        android:id="@+id/ownLutemonImg"
        android:layout_width="134dp"
        android:layout_height="133dp"
        android:layout_marginTop="288dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_black_pixelated_monster_sprite_for_a_videogame_without_a_background_1_" />

    <ImageView
        android:id="@+id/opponentLutemonImg"
        android:layout_width="116dp"
        android:layout_height="111dp"
        android:layout_marginTop="92dp"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_black_pixelated_monster_sprite_for_a_videogame_without_a_background_1_" />
</androidx.constraintlayout.widget.ConstraintLayout>