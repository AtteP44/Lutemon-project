<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ReturnBtn"
        android:layout_width="61dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!-- RecyclerView for listing all Lutemons -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moveLutemonsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Spinner to select destination location -->
    <Spinner
        android:id="@+id/destinationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geostar_fill"
        android:layout_marginTop="16dp"/>

    <!-- Button to execute the move -->
    <Button
        android:id="@+id/moveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move Lutemon"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/geostar_fill"
        android:layout_marginTop="16dp"/>
</LinearLayout>
